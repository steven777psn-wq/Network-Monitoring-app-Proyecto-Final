{
  "uid": "ping-monitor-overview",
  "title": "Ping Monitor Overview",
  "tags": ["network", "monitoring", "prometheus"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "panels": [
    {
      "type": "timeseries",
      "title": "Latencia promedio por host",
      "datasource": {
        "type": "prometheus",
        "uid": "Prometheus"
      },
      "targets": [
        {
          "expr": "avg(device_ping_latency_ms) by (ip)",
          "legendFormat": "{{ip}}",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 }
    },
    {
      "type": "timeseries",
      "title": "Latencia máxima por host",
      "datasource": {
        "type": "prometheus",
        "uid": "Prometheus"
      },
      "targets": [
        {
          "expr": "max(device_ping_latency_ms) by (ip)",
          "legendFormat": "{{ip}}",
          "refId": "B"
        }
      ],
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 }
    },
    {
      "type": "table",
      "title": "Hosts caídos",
      "datasource": {
        "type": "prometheus",
        "uid": "Prometheus"
      },
      "targets": [
        {
          "expr": "device_ping_latency_ms < 0",
          "refId": "C"
        }
      ],
      "gridPos": { "x": 0, "y": 8, "w": 24, "h": 6 }
    },
    {
      "type": "timeseries",
      "title": "RTT por host",
      "datasource": {
        "type": "prometheus",
        "uid": "Prometheus"
      },
      "targets": [
        {
          "expr": "device_ping_latency_ms",
          "legendFormat": "{{ip}}",
          "refId": "D"
        }
      ],
      "gridPos": { "x": 0, "y": 14, "w": 24, "h": 8 }
    },
    {
      "type": "table",
      "title": "Alertas activas",
      "datasource": {
        "type": "prometheus",
        "uid": "Prometheus"
      },
      "targets": [
        {
          "expr": "ALERTS{alertstate=\"firing\"}",
          "refId": "E"
        }
      ],
      "gridPos": { "x": 0, "y": 22, "w": 24, "h": 6 }
    }
  ],
  "templating": {
    "list": []
  },
  "annotations": {
    "list": []
  },
  "editable": true
}
