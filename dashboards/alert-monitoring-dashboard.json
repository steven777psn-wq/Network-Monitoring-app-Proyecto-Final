{
  "dashboard": {
    "title": "Ping Monitor - Static IP View",
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "type": "timeseries",
        "title": "Latency - All IPs",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "avg(device_ping_latency_ms) by (ip)",
            "legendFormat": "{{ip}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": { "x": 0, "y": 0, "w": 24, "h": 8 }
      },
      {
        "type": "stat",
        "title": "Outage - 123.1.1.1",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "min_over_time(device_ping_latency_ms{ip=\"123.1.1.1\"}[5m])",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": null, "color": "red" },
                { "value": 1, "color": "green" }
              ]
            }
          }
        },
        "gridPos": { "x": 0, "y": 8, "w": 6, "h": 4 }
      },
